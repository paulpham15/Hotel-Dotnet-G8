@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="row form-login-container">
    <div class="overlay login-form" id="login-form-home">
        <header class="head-form">

            <h2>Log In</h2>
            <!--     A welcome message or an explanation of the login form -->
            <p>login here using your username and password</p>

        </header>
        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
            <div>
                <p>
                    @foreach (var provider in Model.ExternalLogins)
                    {
                        <button type="submit" name="provider" value="@provider.Name" class="button-google">
                            <div class="icon">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-telegram" viewBox="0 0 16 16">
                                    <path d="M15.545 6.558a9.42 9.42 0 0 1 .139 1.626c0 2.434-.87 4.492-2.384 5.885h.002C11.978 15.292 10.158 16 8 16A8 8 0 1 1 8 0a7.689 7.689 0 0 1 5.352 2.082l-2.284 2.284A4.347 4.347 0 0 0 8 3.166c-2.087 0-3.86 1.408-4.492 3.304a4.792 4.792 0 0 0 0 3.063h.003c.635 1.893 2.405 3.301 4.492 3.301 1.078 0 2.004-.276 2.722-.764h-.003a3.702 3.702 0 0 0 1.599-2.431H8v-3.08h7.545z" fill="red"></path>
                                </svg>
                            </div>
                            <p>Google Sign In</p>
                        </button>
                        
                    }
                </p>
            </div>
        </form>
        <!-- LOGN IN FORM by Omar Dsoky -->
        <form method="post">
            <!--   con = Container  for items in the form-->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="con">
                <!--     Start  header Content  -->
                @*<p>@TempData["Success"]</p>
                <input class="form-input-login" id="messe" type="text" value="@TempData["Success"]">*@

                <div class="field-set">

                    <!--   user name -->
                    <div>
                        <span class="input-item">
                            <i class="fa fa-user-circle"></i>
                        </span>
                        <!--   user name Input-->
                        <input placeholder="Username" class="form-input-login form-control" id="txt-input" type="username" asp-for="Input.Email" autocomplete="username" aria-required="true">
                        <br />
                        <span asp-validation-for="Input.Email" class="text-danger" style="font-size: 13px;"></span>
                    </div>



                    <!--   Password -->
                    <div>
                        <span class="input-item">
                            <i class="fa fa-key"></i>
                        </span>
                        <!--   Password Input-->
                        <input placeholder="Password" id="txt-input" asp-for="Input.Password">
                        <br />
                        <span asp-validation-for="Input.Password" class="text-danger" style="font-size: 13px;"></span>
                    </div>

                    @*<div>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>*@

                    <!--      Show/hide password  -->
                    <!--        buttons -->
                    <!--      button LogIn -->
                    <div>
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <button type="submit" class="log-in login-form-button"> Log In </button>

                </div>

                <!--   other buttons -->
                <div class="other">
                    <!--      Forgot Password button-->
                    <a id="forgot-password" class="btn submits frgt-pass" style="margin-top: 14px;" asp-page="./ForgotPassword">Forgot your password?</a>


                    <!--     Sign Up button -->

                    <button type="button" onclick="location.href='/Identity/Account/Register'" href="/Identity/Account/Register" class="btn submits sign-up login-form-button ">
                        Sign Up
                        <!--         Sign Up font icon -->
                        <i class="fa fa-user-plus" aria-hidden="true"></i>
                    </button>


                    <!--      End Other the Division -->
                </div>

                <!--   End Conrainer  -->
            </div>

            <!-- End Form -->
        </form>

    </div>

